{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true,
        "source.fixAll.eslint": true
    },
    "typescript.preferences.importModuleSpecifier": "relative",
    "files.associations": {
        "*.css": "tailwindcss"
    }, 
    "tailwindCSS.experimental.classRegex": [
        "([a-zA-Z0-9\\-:]+)"
    ]
}